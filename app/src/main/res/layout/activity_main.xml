<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgHomeIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ebook_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        />

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lemon"
        android:text="My Library"
        android:textColor="@color/app_theme2"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@+id/imgHomeIcon"
        app:layout_constraintRight_toRightOf="@+id/imgHomeIcon"
        app:layout_constraintTop_toBottomOf="@+id/imgHomeIcon"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/txtHeading"
        app:layout_constraintRight_toRightOf="@id/txtHeading"
        app:layout_constraintTop_toBottomOf="@id/txtHeading"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/btnAllBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Books"
            android:textAllCaps="false"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/app_theme2"
            />

        <Button
            android:id="@+id/btnCurrentlyReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently Reading"
            android:textAllCaps="false"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/app_theme2"
            />

        <Button
            android:id="@+id/btnAlreadyRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Read"
            android:textAllCaps="false"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/app_theme2"
            />

        <Button
            android:id="@+id/btnWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wishlist"
            android:textAllCaps="false"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/app_theme2"
            />

        <Button
            android:id="@+id/btnFavourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favourites"
            android:textAllCaps="false"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/app_theme2"
            />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/app_theme2"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by Someone at something.org"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>






































